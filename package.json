{
    "name": "stealthflow-observability",
    "version": "1.0.0",
    "description": "Internal observability microservice for StealthFlow ecosystem",
    "type": "module",
    "main": "src/api/server.js",
    "scripts": {
        "start": "node src/api/server.js",
        "dev": "nodemon src/api/server.js",
        "worker": "node scripts/log-worker.mjs",
        "test": "NODE_ENV=test jest",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
        "test:connections": "node scripts/test-connections.js",
        "lint": "eslint src/ scripts/",
        "lint:fix": "eslint src/ scripts/ --fix",
        "format": "prettier --write \"src/**/*.js\" \"scripts/**/*.js\"",
        "format:check": "prettier --check \"src/**/*.js\" \"scripts/**/*.js\"",
        "validate": "npm run lint && npm run format:check && npm test"
    },
    "keywords": [
        "observability",
        "logging",
        "microservice",
        "elasticsearch",
        "redis"
    ],
    "author": "Viet Vu <jooservices@gmail.com> (https://jooservices.com)",
    "license": "MIT",
    "dependencies": {
        "@elastic/elasticsearch": "^8.11.0",
        "express": "^4.18.2",
        "ioredis": "^5.3.2",
        "mongoose": "^8.0.3",
        "prom-client": "^15.1.0",
        "date-fns": "^3.0.0"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "prettier": "^3.1.1",
        "nodemon": "^3.0.2",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "@types/jest": "^29.5.11"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js",
            "!src/**/*.integration.test.js"
        ],
        "testMatch": [
            "**/*.test.js",
            "**/*.integration.test.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        }
    }
}